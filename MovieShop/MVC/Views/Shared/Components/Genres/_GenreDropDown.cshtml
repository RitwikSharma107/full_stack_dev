@model GenreSelectModel

<div class="container">
    <div class="row">
        <div class="col-sm-3">
            <div class="dropdown">
                @* If no genre is selected, it displays "All Genres". If a genre is selected, it displays the selected genre. *@
                <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" aria-expanded="false">
                    @if (string.IsNullOrEmpty(Model.SelectedGenre))
                    {
                        <text>All Genres</text>
                    }
                    else
                    {
                        <text>@Model.SelectedGenre</text>
                    }
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <li><a class="dropdown-item" href="#" data-genre="">All Genres</a></li>
                    @foreach (var genre in Model.Genres)
                    {
                        <li><a class="dropdown-item" href="#" data-genre="@genre.Name">@genre.Name</a></li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>